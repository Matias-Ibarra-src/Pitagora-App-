<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".PreguntaScreenActivity">

    <Button
        android:id="@+id/btn_respuesta_4"
        android:layout_width="261dp"
        android:layout_height="57dp"

        android:layout_marginTop="8dp"
        android:text="respuesta 4"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_respuesta_3" />

    <Button
        android:id="@+id/btn_respuesta_2"
        android:layout_width="261dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:text="respuesta 2"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_respuesta_1" />

    <Button
        android:id="@+id/btn_respuesta_3"
        android:layout_width="261dp"
        android:layout_height="57dp"

        android:layout_marginTop="8dp"
        android:text="respuesta 3"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_respuesta_2" />

    <Button
        android:id="@+id/btn_respuesta_1"
        android:layout_width="261dp"
        android:layout_height="57dp"
        android:layout_marginTop="40dp"
        android:text="respuesta 1"
        android:textAlignment="center"
        android:textSize="10sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="346dp"
        android:layout_height="133dp"
        android:layout_marginTop="100dp"
        android:background="#FFFDFD"
        android:text="texto de la pregunta"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#00FF21"
        android:text="Siguiente"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_quit_pregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#FF0000"
        android:text="Salir"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_pregunta_glosario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#0022FF"
        android:text="Ir al Glosario"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_Correctas_pregunta"
        android:layout_width="108dp"
        android:layout_height="41dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="28dp"
        android:text="Puntaje"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toStartOf="@+id/btn_pregunta_glosario" />

</androidx.constraintlayout.widget.ConstraintLayout>