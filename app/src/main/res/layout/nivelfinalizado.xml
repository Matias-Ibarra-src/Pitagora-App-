<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".NivelfinalizadoActivity">

    <TextView
        android:id="@+id/felicidades_titulo"
        android:layout_width="269dp"
        android:layout_height="55dp"
        android:layout_marginTop="192dp"
        android:text="¡¡Felicidades!!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nivel_completado_titulo"
        android:layout_width="313dp"
        android:layout_height="109dp"
        android:text="Has completado el nivel"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/felicidades_titulo" />

    <Button
        android:id="@+id/btn_siguiente_nivel"
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#39CA11"
        android:text="Siguiente Nivel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nivel_completado_titulo" />
</androidx.constraintlayout.widget.ConstraintLayout>